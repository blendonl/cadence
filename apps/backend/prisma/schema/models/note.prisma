enum NoteType {
  GENERAL
  MEETING
  DAILY
  TASK

  @@map("note_type")
}

model Note {
  id String @id @default(uuid())

  type NoteType @default(GENERAL)

  title   String
  content String
  tags    String[] @default([])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  projects Project[]
  boards   Board[]
  tasks    Task[]

  @@map("note")
}
